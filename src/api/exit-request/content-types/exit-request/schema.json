{
  "kind": "collectionType",
  "collectionName": "exit_requests",
  "info": {
    "singularName": "exit-request",
    "pluralName": "exit-requests",
    "displayName": "Exit Request"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "student": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "plugin::users-permissions.user"
    },
    "reasonType": {
      "type": "string",
      "required": true
    },
    "reasonDetails": {
      "type": "text"
    },
    "status": {
      "type": "enumeration",
      "default": "PENDING",
      "enum": [
        "PENDING",
        "APPROVED",
        "REJECTED",
        "EXITED"
      ]
    },
    "expiresAt": {
      "type": "datetime",
      "required": true
    },
    "consumedAt": {
      "type": "datetime"
    },
    "scannerId": {
      "type": "string"
    }
  }
}
